<launch>

  <!-- <arg name="multimaster" default="false"/> -->

  <arg name="robot_namespace" default="/"/>
  <arg name="robot_ns" default="/"/>

  <arg name="x" default="0.0"/>
  <arg name="y" default="0.0"/>
  <arg name="z" default="0.0"/>
  <arg name="yaw" default="0.0"/>
  
  <arg name="tf_frame_prefix" 
       value="$(eval '' if robot_ns == '/' else robot_ns + '/')"/>

  <!-- Optionally disable teleop control -->
  <arg name="joystick" default="true" />

  <group ns="$(arg robot_namespace)">

    <!-- <group if="$(arg multimaster)">
      <include file="$(find husky_description)/launch/description.launch" >
        <arg name="robot_namespace" value="$(arg robot_namespace)"/>
      </include>

      <include file="$(find multimaster_launch)/launch/multimaster_gazebo_robot.launch">
        <arg name="gazebo_interface" value="$(find husky_control)/config/gazebo_interface.yaml" />
        <arg name="robot_namespace" value="$(arg robot_namespace)"/>
      </include> -->

      <!-- For multimaster bringup, need to load the controller config -->
      <!-- <rosparam command="load" file="$(find husky_control)/config/control.yaml" />
    </group> -->

    <!-- For single master bringup, run robot control on the gazebo master -->
    <!-- Note that husky_description/description.launch is already included in husky_control/control.launch. -->
    <!-- <group unless="$(arg multimaster)"> -->
      <include file="$(find husky_control)/launch/control.launch">
        <!-- <arg name="multimaster" value="$(arg multimaster)"/> -->
      </include>
      <include file="$(find husky_control)/launch/teleop_joystick.launch">
        <arg name="joystick" value="$(arg joystick)" />
      </include>
    <!-- </group> -->

    <!-- Additional nodes for specific accessories -->
    <group if="$(optenv HUSKY_REALSENSE_ENABLED 0)">
      <include file="$(find husky_gazebo)/launch/realsense.launch" />
    </group>

    <!-- Spawn robot in gazebo -->
    <node name="spawn_husky_model" pkg="gazebo_ros" type="spawn_model"
        args="-x $(arg x)
              -y $(arg y)
              -z $(arg z)
              -Y $(arg yaw)
              -unpause
              -urdf
              -param robot_description
              -model husky
              -robot_namespace $(arg robot_namespace)
              -robot_namespace $(arg robot_ns)" />

    <group ns="gazebo/zed2">

      <node name="rgbd_odometry"
            pkg="rtabmap_ros"
            type="rgbd_odometry">
        <param name="frame_id" value="$(arg tf_frame_prefix)base_link"/>
        <param name="odom_frame_id" value="$(arg tf_frame_prefix)odom"/>
        <param name="publish_tf" value="false"/>

        <remap from="rgb/image" to="/$(arg robot_ns)/zed2/left/image_rect_color"/>
        <remap from="rgb/camera_info" to="/$(arg robot_ns)/zed2/left/camera_info"/>
        <remap from="depth/image" to="/$(arg robot_ns)/zed2/depth/depth_registered"/>
      </node>

      <!-- Disable verbose output from rgbd_odometry node -->
      <node name="set_rgbd_odometry_log_level"
            pkg="rosservice"
            type="rosservice"
            args="call --wait rgbd_odometry/set_logger_level 'ros.rtabmap_ros' 'warn'"/>

    </group>
    
    <node name="zed2_imu_transform_publisher"
          pkg="rostopic"
          type="rostopic"
          args="pub zed2/left_cam_imu_transform geometry_msgs/Transform --latch
                --file=$(find leo_erc_gazebo)/config/zed2/left_cam_imu_transform.yaml"/>

    <node name="zed2_imu_transform_broadcaster"
          pkg="leo_erc_gazebo"
          type="zed2_imu_transform_broadcaster">
      <param name="tf_frame_prefix" value="$(arg tf_frame_prefix)"/>
    </node>

  </group>

</launch>
